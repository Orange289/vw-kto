mixin header
	header.page_header
		h1.page_body__title Калькулятор ТО

mixin slider(array)
	label.form__label(for='#{array.id}') #{array.title}
	.range__slider(id='#{array.id}')

mixin table-head(array)
	table.info__head
		tr
			each item in array
				td(class='#{item.class}')
					span #{item.text}

mixin info-content(array)
	each item in array
		div(class='#{item.class} #{item.mod}')
			span #{item.span}
			if item.mod == 'info__col_cost'
				b #{item.text}
					svg.icons.icons__ruble.icons__gray
						use(xlink:href='img/sprite.svg#i-ruble')
			else
				b #{item.text}

mixin info-content-add(array)
	.info__col.info__col_1.info__col_name
		label.form__label.form__label_checkbox.info__label #{array.text}
			span.info__note #{array.subtext}
			if array.check == 1
				input(type='checkbox' checked).form__checkbox
				span.form__tick
			else
				input(type='checkbox').form__checkbox
				span.form__tick
